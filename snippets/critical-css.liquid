{% comment %}
  Critical CSS
  Inline critical styles for above-the-fold content
  Reduces render-blocking CSS for faster First Contentful Paint
  
  Include in <head> of theme.liquid before other CSS:
  {% render 'critical-css' %}
{% endcomment %}

<style>
  /* Critical Reset & Base */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    -webkit-text-size-adjust: 100%;
    text-size-adjust: 100%;
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 16px;
    line-height: 1.5;
    color: #1a1a1a;
    background-color: #ffffff;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Critical Typography */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Instrument Serif', Georgia, serif;
    font-weight: 400;
    line-height: 1.2;
  }

  h1 { font-size: clamp(2rem, 5vw, 3.5rem); }
  h2 { font-size: clamp(1.75rem, 4vw, 2.5rem); }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* CRITICAL: Ensure animated elements are visible even without JS */
  [data-animate],
  [data-animate-stagger] > * {
    opacity: 1 !important;
    transform: none !important;
  }
  
  /* Re-enable animations once JS loads */
  .js [data-animate],
  .js [data-animate-stagger] > * {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .js [data-animate].is-visible,
  .js [data-animate-stagger].is-visible > * {
    opacity: 1;
    transform: none;
  }

  /* Critical Layout */
  .container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .container { padding: 0 2rem; }
  }

  /* Critical Header Styles */
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: #ffffff;
    border-bottom: 1px solid #e5e5e5;
  }

  .header__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
    min-height: 60px;
  }

  .header__logo {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 1.5rem;
  }

  .header__nav {
    display: none;
  }

  @media (min-width: 1024px) {
    .header__nav {
      display: flex;
      gap: 2rem;
    }
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* Critical Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    font-family: inherit;
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn--primary {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  .btn--secondary {
    background-color: transparent;
    border: 1px solid #1a1a1a;
    color: #1a1a1a;
  }

  /* Critical Grid */
  .grid {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .grid--2 { grid-template-columns: repeat(2, 1fr); }
    .grid--3 { grid-template-columns: repeat(3, 1fr); }
    .grid--4 { grid-template-columns: repeat(4, 1fr); }
  }

  /* Hide non-critical elements until full CSS loads */
  .footer,
  .newsletter,
  .product-recommendations {
    opacity: 0;
  }

  /* Ensure hero is visible immediately */
  .hero,
  .slideshow,
  .banner {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Loading placeholder for main content */
  main:empty::before {
    content: '';
    display: block;
    height: 100vh;
    background: linear-gradient(90deg, #f5f5f5 25%, #ebebeb 37%, #f5f5f5 63%);
    background-size: 200% 100%;
    animation: loading-shimmer 1.5s ease-in-out infinite;
  }

  @keyframes loading-shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  /* Dark mode critical styles */
  @media (prefers-color-scheme: dark) {
    body {
      color: #f5f5f5;
      background-color: #1a1a1a;
    }

    .header {
      background-color: #1a1a1a;
      border-bottom-color: #333;
    }

    .btn--primary {
      background-color: #f5f5f5;
      color: #1a1a1a;
    }

    .btn--secondary {
      border-color: #f5f5f5;
      color: #f5f5f5;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      transition-duration: 0.01ms !important;
    }
    html { scroll-behavior: auto; }
  }
</style>
